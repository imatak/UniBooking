<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <RelativeLayout
            android:id="@+id/Fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CalendarView
                android:id="@+id/kalendarRezervacije"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/razlogtxt"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@+id/kalendarRezervacije"
                android:gravity="center"
                android:text="Razlog: " />

            <Spinner
                android:id="@+id/razlogSpinner"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/razlogtxt"
                android:layout_below="@+id/kalendarRezervacije"/>

            <TextView
                android:id="@+id/userEmailSpremi"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/razlogSpinner"
                android:layout_centerVertical="true"
                android:gravity="center"/>

            <EditText
                android:id="@+id/userText"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/userEmailSpremi"
                android:layout_centerVertical="true"
                android:hint="Neki tekst za spremiti"
                android:inputType="text"
                android:gravity="center"/>


            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="#008AFF"
                android:text="Spremi"
                android:textColor="#ffffff"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/zaglavlje"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:itemTextColor="@color/colorButton"
        app:itemIconTint="@color/colorButton"
        android:id="@+id/nav_view"
        app:menu="@menu/meni"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>